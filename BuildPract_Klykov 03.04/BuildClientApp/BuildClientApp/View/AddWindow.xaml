<Window x:Class="BuildClientApp.View.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildClientApp.View"
        mc:Ignorable="d"
        Title="Стройматериалы: Добавить" Height="350" Width="300" MinWidth="200" MinHeight="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    MinWidth="200" >

            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="SnmTxb"/>

            <TextBlock Text="Имя"/>
            <TextBox x:Name="NameTxb"/>

            <TextBlock Text="Отчество"/>
            <TextBox x:Name="PtrnmTxb"/>

            <TextBlock Text="Логин"/>
            <TextBox Name="loginTxb"/>

            <TextBlock Text="Пароль"/>
            <TextBox x:Name="PasswordTxb"/>
            <TextBlock Text="Роль"/>
            <ComboBox x:Name="CmbRole"
                      DisplayMemberPath="RoleName" />

            <Button Content="Добавить"
                    Click="btn_save" Margin="0 15 0 0"/>

        </StackPanel>
        
        
    </Grid>
</Window>
